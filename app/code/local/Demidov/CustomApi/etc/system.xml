<?xml version="1.0"?>
<config>
    <tabs>
        <custom_api>
            <label>Custom API</label>
            <sort_order>110</sort_order>
        </custom_api>
    </tabs>
    <sections>
        <custom_api_general>
            <label>General</label>
            <tab>custom_api</tab>
            <frontend>text</frontend>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <log>
                    <label>Log settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_Website>1</show_in_Website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <request>
                            <label>Log successful requests</label>
                            <frontend_type>select</frontend_type>
                            <source_model>CustomApi/source_status</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_Website>1</show_in_Website>
                            <show_in_store>1</show_in_store>
                        </request>
                        <error>
                            <label>Error log</label>
                            <frontend_type>select</frontend_type>
                            <source_model>CustomApi/source_status</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_Website>1</show_in_Website>
                            <show_in_store>1</show_in_store>
                        </error>
                    </fields>
                </log>
                <support>
                    <label>Support settings</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_Website>1</show_in_Website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <support_email>
                            <label>Support email address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_Website>1</show_in_Website>
                            <show_in_store>1</show_in_store>
                        </support_email>
                    </fields>
                </support>
            </groups>
        </custom_api_general>
    </sections>
</config>